<h1>Listing pronostics</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bet</th>
      <th>Ligue</th>
      <th>Score1</th>
      <th>Score2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pronostics.each do |pronostic| %>
      <tr>
        <td><%= pronostic.user_id %></td>
        <td><%= pronostic.bet_id %></td>
        <td><%= pronostic.ligue_id %></td>
        <td><%= pronostic.score1 %></td>
        <td><%= pronostic.score2 %></td>
        <td><%= link_to 'Show', pronostic %></td>
        <td><%= link_to 'Edit', edit_pronostic_path(pronostic) %></td>
        <td><%= link_to 'Destroy', pronostic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pronostic', new_pronostic_path %>
